<div class='navbar'>
	<div><i class="fa-solid fa-kitchen-set" style="font-size: 30px"></i>
	</div>
	<div>
		<%= link_to "Home", root_path %>
     | 
		<%= link_to "New category", new_category_path %>
	</div>
</div>

<div class="banner-home">
  <p>All your recipes in one place üçù</p>
  <p style="font-size: 15px">Sponsored by <%= link_to "Ainsley", "https://www.ainsley-harriott.com/", target: '_blank', rel: 'noopener'%></p>
</div>

<div class='container'>
  <div class='cat-header'>
    <div style='margin: 0 0'>
      <h4>List of Categories</h4>
    </div>
    <div>
      <%= link_to "New category", new_category_path, class: 'btn btn-success' %>
    </div>
  </div>

  <div class='row content'>
    <div class='col-12'>
      <div class="cards">
        <% @categories.each do |category| %>
          <div class="card-category" style="background-image: url(<%= category.photo.attached? && category.photo.key.present? ? cl_image_path(category.photo.key) : asset_path('thoughtful-ainsley.jpg') %>)">
            <%= link_to category.name, category_path(category) %>
          </div>
        <% end %>
      </div>
    </div>
    
  </div>
</div>