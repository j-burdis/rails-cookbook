<div class='navbar'>
	<div id='emoji'>
	<%= "🧑🏻‍🍳" %>
	</div>
	<div>
		<%= link_to "My categories", categories_path %>
		<%= link_to "New categories", new_category_path %>
	</div>
</div>

<div class='category-container'>
  <h4> New Category </h4>

  <div class="row">
    <div class="col-6 mx-auto">
      <%= simple_form_for [@category] do |f| %>
        <%= f.input :name %>
        <%= f.input :photo, as: :file %>
        <%= f.submit "Create category", class: "btn btn-success" %>
      <% end %>
      <div>
        <%= link_to "Back to categories", categories_path, class:"category-links" %>
      </div>
    </div>
  </div>

</div>
